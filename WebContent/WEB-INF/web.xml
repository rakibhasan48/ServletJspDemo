<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <welcome-file-list>
    <welcome-file>FirstPage.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>li</servlet-name>
    <servlet-class>com.ListUsers</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>del</servlet-name>
    <servlet-class>com.DeleteUser</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>up</servlet-name>
    <servlet-class>com.UpdateUser</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>log</servlet-name>
    <servlet-class>com.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>sign</servlet-name>
    <servlet-class>com.SignupServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>upass</servlet-name>
    <servlet-class>com.PassUpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>upass</servlet-name>
    <url-pattern>/updateP</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>li</servlet-name>
    <url-pattern>/listUsers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>del</servlet-name>
    <url-pattern>/deleteUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>up</servlet-name>
    <url-pattern>/updateUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>log</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>sign</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>
  
  <!-- JSP Mapping -->
  
  <servlet>
    <servlet-name>lg</servlet-name>
    <jsp-file>/FirstPage.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>signjsp</servlet-name>
    <jsp-file>/SignUp.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>pa</servlet-name>
    <jsp-file>/UpPass.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>lg</servlet-name>
  	<url-pattern>/signin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>pa</servlet-name>
    <url-pattern>/updatepassword</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>signjsp</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
</web-app>